{
    "repositories": [
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer",
            "options": {
                "ssl": {
                    "local_cert": "composer.pem"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cg-validation.git"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cgslim.git"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cg-order.git"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cgetag.git"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cg-vnd-field-error.git"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "library/"
        }
    },
    "require": {
        "channelgrabber/cache": "~1.0.0",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/etag": "~1.3.1",
        "channelgrabber/http": "~1.2.1",
        "channelgrabber/order": "~1.0.0",
        "channelgrabber/phinx": "~0.2.9.1",
        "channelgrabber/predis": "~1.0.1",
        "channelgrabber/slim": "~1.5.1",
        "channelgrabber/stdlib": "2.4.1 as 2.3.4",
        "channelgrabber/validation": "~1.1.3",
        "channelgrabber/vnderror": "~1.0.0",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.4",
        "predis/predis": "~0.8.3",
        "slim/slim": "2.3.*",
        "zendframework/zend-config": "~2.2.5",
        "zendframework/zend-db": "~2.2.5",
        "zendframework/zend-di": "~2.2.5",
        "zendframework/zend-inputfilter": "~2.2.5",
        "zendframework/zend-servicemanager": "~2.2.5",
        "zendframework/zend-validator": "~2.2.5"
    },
    "require-dev": {
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0",
        "channelgrabber/codeception": "~1.1.32"
    },
    "scripts": {
        "post-install-cmd": [
            "php -d memory_limit=512M bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ],
        "post-update-cmd": [
            "php -d memory_limit=512M bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ]
    }
}
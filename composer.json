{
    "repositories": [
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer",
            "options": {
                "ssl": {
                    "local_cert": "composer.pem"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "library/"
        }
    },
    "require": {
        "channelgrabber/cilex": "~1.0.3",
        "channelgrabber/http": "~1.2.1",
        "channelgrabber/log": "~1.4.0",
        "channelgrabber/slim": "~1.8.0",
        "channelgrabber/stdlib": "~2.5.0",
        "channelgrabber/validation": "~1.1.5",
        "channelgrabber/vnderror": "~1.0.0",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.3",
        "robmorgan/phinx": "v0.2.8",
        "slim/slim": "2.3.*",
        "zendframework/zend-config": "~2.2.5",
        "zendframework/zend-db": "~2.2.5",
        "zendframework/zend-di": "~2.2.5",
        "zendframework/zend-eventmanager": "~2.2.5",
        "zendframework/zend-inputfilter": "~2.2.5",
        "zendframework/zend-servicemanager": "~2.2.5",
        "zendframework/zend-validator": "~2.2.5",
        "channelgrabber/zf2-stdlib" : "~1.1.6"
    },
    "require-dev": {
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0",
        "channelgrabber/codeception": "~1.1.42"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ]
    }
}

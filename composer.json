{
    "repositories": [
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer",
            "options": {
                "ssl": {
                    "local_cert": "composer.pem"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cg-transaction.git"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "library/"
        }
    },
    "require": {
        "channelgrabber/account": "~1.0.28",
        "channelgrabber/cache": "~1.3.0",
        "channelgrabber/channel": "~1.2.5",
        "channelgrabber/cilex": "~1.0.3",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/etag": "~1.5.0",
        "channelgrabber/gearman": "~1.1.0",
        "channelgrabber/http": "~1.2.14",
        "channelgrabber/log": "~2.0.1",
        "channelgrabber/order": "~1.7.5",
        "channelgrabber/phinx": "~0.3.2.2",
        "channelgrabber/predis": "~1.0.1",
        "channelgrabber/product": "~1.0.1",
        "channelgrabber/settings": "~1.0.11",
        "channelgrabber/slim": "~1.9.2",
        "channelgrabber/stdlib": "~2.7.0",
        "channelgrabber/template": "~1.2.20",
        "channelgrabber/transaction": "~1.0.2",
        "channelgrabber/usage": "~1.0.0",
        "channelgrabber/user": "~1.16.0",
        "channelgrabber/userpreference": "~1.2.0",
        "channelgrabber/validation": "~1.2.2",
        "channelgrabber/vnderror": "~1.0.0",
        "channelgrabber/zf2-stdlib": "~1.1.6",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.4",
        "predis/predis": "~0.8.3",
        "slim/slim": "2.3.*",
        "zendframework/zend-config": "~2.2.5",
        "zendframework/zend-db": "~2.2.5",
        "zendframework/zend-di": "~2.2.5",
        "zendframework/zend-eventmanager": "~2.2.5",
        "zendframework/zend-inputfilter": "~2.2.5",
        "zendframework/zend-servicemanager": "~2.2.5",
        "zendframework/zend-validator": "~2.2.5"
    },
    "require-dev": {
        "channelgrabber/codeception": "~1.1.47",
        "channelgrabber/phpunit": "~1.0.0",
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ]
    }
}
